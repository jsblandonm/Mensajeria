        <span class="text-danger" asp-validation-for="pedidos.SuComprador"></span>
    </div>
    <div class="form-group">
        <label asp-for="pedidos.SuEncargado"></label>
        <input asp-for="pedidos.SuEncargado" class="form-control">
        <span class="text-danger" asp-validation-for="pedidos.SuEncargado"></span>
    </div>

