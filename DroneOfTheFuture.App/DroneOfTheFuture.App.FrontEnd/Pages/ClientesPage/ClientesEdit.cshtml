@page
@model DroneOfTheFuture.App.FrontEnd.Pages.ClientesPage.ClientesEdit
@{
    ViewData["Title"] = "Crear Clientes";
    ViewData["Title-2"] = "Editar Clientes";

}

@if (@Model.est)
{
    <h1>@ViewData["Title"] </h1>
}
else
{
    <h1>@ViewData["Title-2"] </h1>
}


@{
    int ClienteId = Model.clientes.Id;
}

<h4>@Model.clientes.Nombre @Model.clientes.Apellidos</h4>

<form method="Post" asp-action="Edit-crear">
    <input type="hidden" asp-for="clientes.Id" />
    <div>
        <label asp-for="clientes.Nombre"></label>
        <input asp-for="clientes.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="clientes.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientes.Apellidos"></label>
        <input asp-for="clientes.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="clientes.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientes.Identificacion"></label>
        <input asp-for="clientes.Identificacion" class="form-control">
        <span class="text-danger" asp-validation-for="clientes.Identificacion"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientes.FechaNacimiento"></label>
        <input asp-for="clientes.FechaNacimiento" class="form-control">
        <span class="text-danger" asp-validation-for="clientes.FechaNacimiento"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientes.Direccion"></label>
        <input asp-for="clientes.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="clientes.Direccion"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientes.NumeroDeTelefono"></label>
        <input asp-for="clientes.NumeroDeTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="clientes.NumeroDeTelefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientes.TipoPersona"></label>
        <input asp-for="clientes.TipoPersona" class="form-control">
        <span class="text-danger" asp-validation-for="clientes.TipoPersona"></span>
    </div>

